<%= semantic_form_for @product, :html => { :enctype => "multipart/form-data" } do |form| %>
  <%= form.semantic_errors :title, :description, :image, :price %>
  <%= form.inputs do %>
    <%= form.input :title %>
    <%= form.input :description, :input_html => { :rows => 6 } %>
    <%= form.input :image, :as => :file %>
    <%= form.hidden_field :image_cache %>
    <%= image_tag(@product.image_url) if @product.image? %>
    <%= form.input :price %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button %>
  <% end %>
<% end %>
