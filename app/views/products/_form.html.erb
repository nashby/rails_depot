<%= semantic_form_for @product do |form| %>
  <%= form.semantic_errors :title, :description, :image_url, :price%>
  <%= form.inputs do %>
    <%= form.input :title %>
    <%= form.input :description, :input_html => { :rows => 6 } %>
    <%= form.input :image_url, :as => :url %>
    <%= form.input :price %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button %>
  <% end %>
<% end %>
